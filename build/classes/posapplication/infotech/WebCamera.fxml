<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="posapplication.infotech.WebCameraController">
   <children>
      <ImageView fx:id="imageBox" fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="takePictureButton" mnemonicParsing="false" onAction="#takePicture" stylesheets="@infotechhomepage.css" text="Take Picture">
         <styleClass>
            <String fx:value="header" />
            <String fx:value="register_button" />
         </styleClass>
         <font>
            <Font size="16.0" />
         </font>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </Button>
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>
